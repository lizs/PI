<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <PropertyGroup>
    <PublishDir>$(SolutionDir)Editor\</PublishDir>

    <PostBuildEvent>
      copy "$(ProjectDir)$(OutDir)$(TargetFileName)" "$(PublishDir)"
      copy "$(ProjectDir)$(OutDir)$(TargetName).pdb" "$(PublishDir)"
      xcopy "$(ProjectDir)/Files" "$(PublishDir)" /S /Y
      echo "$(ProjectDir)$(OutDir)$(TargetFileName)" "$(PublishDir)"
      echo "$(ProjectDir)$(OutDir)$(TargetName).pdb" "$(PublishDir)"
    </PostBuildEvent>
  </PropertyGroup>  
  
  <Import Project="$(SolutionDir)refrences.props" />

</Project>